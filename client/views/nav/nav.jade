.row(ng-cloak)
  .small-12.columns
    nav.top-bar(ng-cloak, data-topbar, role="navigation", ng-controller='NavCtrl')
      ul.title-area
        li.name
          h1: a(ui-sref='home') HIIT It
        li.toggle-topbar.menu-icon
          a(href="/#/"): span
      section.top-bar-section(ng-cloak)
        ul.right(ng-show='!rootuser.username')
          li.divider
          li: a(ui-sref='home') Home
          li.divider
          li: a(ui-sref='login') Login
          li.divider
          li: a(ui-sref='register') Register
        ul.right(ng-show='rootuser.username')
          li.divider
          li: a(ui-sref='workouts') Workouts
          li.divider
          li: a(ui-sref='schedule') Schedule
          li.divider
          li.has-dropdown
            a(href='') {{rootuser.username}}
            ul.dropdown
              li: a(href='', ng-click='logout()') Log Out

