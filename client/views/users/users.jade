.row
  .small-6.columns
    form(name='userForm')
      fieldset
        legend {{mode}}
        .row
          .small-12.columns
            label Username
            input#username(type='text', name='username', ng-model='user.username', autofocus, required, ng-minlength='3', ng-maxlength='20')
        .row
          .small-12.columns
            label Password
            input#password(type='password', name='password', ng-model='user.password', required, ng-minlength='3', ng-maxlength='20')
        .row(ng-show='mode.toLowerCase() === "register"')
          .small-12.columns
            label Avatar
            input#avatar(ng-file-select, type='file', name='file', accept="image/*", ng-model='avatar', ng-file-model='avatar', ng-multiple='false')
        .row
          .small-12.columns
            br
            button.button.radius.small(ng-click='submit()') Submit
  .small-6.columns
